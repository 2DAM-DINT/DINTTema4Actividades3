<Window x:Class="Superheroes_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes_v2"
        xmlns:pestañas="clr-namespace:Superheroes_v2.pestañas"
        mc:Ignorable="d"
        Title="Superheroes"
        Height="700"
        Width="1000"
        MinHeight="700"
        MinWidth="1000"
        Icon="./recursos/shield.ico">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Ver superhéroes">
                <pestañas:VerSuperheroes x:Name="verSuperheroes"></pestañas:VerSuperheroes>
            </TabItem>
            <TabItem Header="Nuevo superhéroe">
                <pestañas:CrearSuperheroe x:Name="crearSuperheroes"></pestañas:CrearSuperheroe>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
